# Flask 环境配置
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Flask 密钥（生产环境请务必修改）
SECRET_KEY=your-secret-key-here

# TiDB Cloud 数据库配置
DB_USER=root
DB_PASSWORD=your-password
DB_HOST=your-tidb-host
DB_PORT=4000
DB_NAME=instrument_booking

# 数据库 URI（可选，如果设置此变量，将覆盖上面的单独配置）
# SQLALCHEMY_DATABASE_URI=mysql+pymysql://user:password@host:4000/db_name?charset=utf8mb4

# SSL 配置（TiDB Cloud 需要）
SSL_VERIFY_CERT=True
SSL_VERIFY_IDENTITY=True
# SSL_CA=/path/to/ca-cert.pem  # 可选，如果需要自定义 CA 证书路径

# SQLAlchemy 配置
SQLALCHEMY_ECHO=False

# 迁移目录
MIGRATE_DIRECTORY=migrations

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Redis 缓存配置
CACHE_DEFAULT_TIMEOUT=300